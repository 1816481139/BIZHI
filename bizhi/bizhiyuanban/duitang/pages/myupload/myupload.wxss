.container {
  padding: 10px;
}

.upload-list {
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.upload-item {
  width: 47%; /* 瀑布流两列布局 */
  margin-bottom: 10px;
  background-color: #fff;
  border-radius: 4px;
  overflow: hidden;
}

.upload-image {
  width: 100%;
  height: 280px; /* 根据需要调整 */
}

.upload-info {
  padding: 10px;
}

.upload-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}

.upload-time {
  font-size: 12px;
  color: #666;
}