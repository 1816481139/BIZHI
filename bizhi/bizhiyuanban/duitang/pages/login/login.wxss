page {
    height: 100%;
    background-color: #fafafa;
}

.wrap {
    display: flex;
    flex-direction: column;
    align-items: center;

}

.main_item {
    box-sizing: border-box;
    background-color: white;
    width: 100%;
    height: 110rpx;
    padding: 0 28rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32;
    border-bottom: 2rpx solid #fafafa;

}

.item_label {
    color: black;
}

.item_input {
    text-align: right;
    color: #AAAAAA;
}

.login {
    width: 70%;
    height: 84rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #e08a84;
    border-radius: 10rpx;
    margin-top: 300rpx;
    color: white;
    font-size: 32rpx;
    font-weight: 500;
}