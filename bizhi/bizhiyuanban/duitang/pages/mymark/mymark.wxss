/* myFavorites.wxss */
.container {
  padding: 10px;
}

.filter-picker {
  margin-bottom: 20px;
}

.picker-display {
  padding: 10px;
  align-content: center;
  background-color: #f0f0f0;
  border-radius: 4px;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.grid-item {
  width: 48%; /* 两列布局，留出间隙 */
  height:290px;
  margin-bottom: 15px;
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
  position: relative; /* 为了绝对定位内部元素 */
}

.item-image {
  width: 100%;
  height: 230px; /* 根据需要调整 */
  object-fit: cover;
  border-radius: 5px;
}

.item-info {
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-user {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.item-favorites {
  display: flex;
  align-items: center;
}

.favorites-count {
  font-size: 14px;
  color: #666;
  margin-right: 5px;
}

.favorites-icon {
  width: 20px; /* 根据图标实际大小调整 */
  height: 20px;
}