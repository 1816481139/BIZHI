.content{
  background-color: #fafafa;
  min-height: 100vh;
}
.nowupload_icon{
  
  color:#9c615f7c ;
  font-weight: 700;
}
.nowupload_icon image{ 
  width:50rpx;
  height:50rpx;
  vertical-align:middle;
  margin-right: 5rpx;
}
.nowupload_iconbg{
  background-color: #fff;
  padding: 30rpx 40rpx;
}
.upload-box{
  margin-top: 30rpx;
  width: 300rpx;
  height: 300rpx;
  background-size: auto;
  border:2rpx dashed #ee8581;
}
.upload-boxbt{
  margin-left: 65rpx;
  font-size: 30rpx;
  color: #949494;
  margin-top: 10rpx;
}
.upload-box image{
  width: 100%;
  height: 100%;
}
picker{
  width: 100%;
  margin-top: 20rpx;
  border-bottom:1px solid rgba(204, 204, 204, 0.438) ;
  height: 70rpx;
  padding: 10rpx 40rpx;
  line-height: 70rpx;
  color:#949494 ;
}
.xz-bg .picker-top{
  margin-left: 40rpx;
  font-size: 30rpx;
}
.xz-bg image{
  width: 20rpx;
  height: 25rpx;
}

.xz-bgtp{
  margin-left: 40rpx;
  color:#9c615f7c ;
  font-weight: 700;
}
.xz-bgtp image{
  width:40rpx;
  height:35rpx;
  vertical-align:middle;
  margin-right: 10rpx;
}
input{
  height:70rpx ;
  margin-left: 40rpx;
}
/* 在 WXSS 中设置 input 组件的 placeholder 样式 */

.xz-bg{
  background-color: #fff;
  margin-top: 30rpx;
  padding: 30rpx 0;
}
.ip-tp{
  margin-top: 50rpx;
  margin-left: 40rpx;
  color:#9c615f7c ;
  font-weight: 700;
}
.ip-tp image{
  width:40rpx;
  height:35rpx;
  vertical-align:middle;
  margin-right: 10rpx;
}
.input{
  margin: 20rpx 0 0 0;
  margin-left: 40rpx;
}

.input-bottom{
  border-bottom:1px solid rgba(204, 204, 204, 0.438) ;
}
.submit-btn{
  background-color: #ee8581;
  color: white;
  margin-top: 100rpx;
}

